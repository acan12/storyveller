<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- label name -->
        <TextView
            android:id="@+id/itinerary_label_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:textColor="@color/material_blue_500"
            android:text="Itenary Name" />

        <EditText
            android:id="@+id/itinerary_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:textColor="@color/material_blue_500"
            android:text="Transportation" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight=".28"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/transportation_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/border_spinner"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dropdown" />

        </RelativeLayout>





        <!-- Start & End datetime -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:textColor="@color/material_blue_500"
            android:text="Start to" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left">
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/date_start_button"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:bootstrapBrand="success"
                app:bootstrapText="Date"
                app:buttonMode="regular"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/time_start_button"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:bootstrapBrand="success"
                app:bootstrapText="Time"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:textColor="@color/material_blue_500"
            android:text="End to" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/date_end_button"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:bootstrapBrand="primary"
                app:bootstrapText="Date"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/time_end_button"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:bootstrapBrand="primary"
                app:bootstrapText="Time"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>