<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/my_recycler_view">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/panel_itienary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bootstrap_brand_secondary_text"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginLeft="15dip"
        android:text="Itenary Name" />

        <EditText
        android:id="@+id/itinerary_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:layout_margin="5dip"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dip"
        android:textColor="@android:color/white"
        android:text="Transportation" />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/transportation_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/border_spinner"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dropdown" />

        </RelativeLayout>

        <!-- Start & End datetime -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:textColor="@android:color/white"
            android:text="Start to" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left">
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/date_start_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:bootstrapBrand="success"
                app:bootstrapText="Date"
                app:bootstrapSize="md"
                app:buttonMode="regular"
                app:showOutline="true"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/time_start_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:bootstrapBrand="success"
                app:bootstrapText="Time"
                app:bootstrapSize="md"
                app:buttonMode="regular"
                app:showOutline="true"
                app:roundedCorners="true" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:textColor="@android:color/white"
            android:text="End to" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/date_end_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:bootstrapBrand="warning"
                app:bootstrapText="Date"
                app:bootstrapSize="md"
                app:buttonMode="regular"
                app:showOutline="true"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/time_end_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:bootstrapBrand="warning"
                app:bootstrapText="Time"
                app:bootstrapSize="md"
                app:buttonMode="regular"
                app:showOutline="true"
                app:roundedCorners="true" />

        </LinearLayout>



        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/close2_form_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:bootstrapBrand="primary"
            app:bootstrapText="Close"
            app:buttonMode="regular"
            app:bootstrapSize="lg"
            app:showOutline="false"
            app:roundedCorners="true" />

    </LinearLayout>
</ScrollView>